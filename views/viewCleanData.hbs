<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <style>
        table { border-collapse: collapse; width: 80%; }
        th, td { border: 1px solid #000; padding: 8px; text-align: left; }
        tr.highlight { background-color: #ffdddd; }
    </style>
</head>
<body>
    <h2>{{title}}</h2>

    {{#if invoices.length}}
    <table>
        <thead>
            <tr>
                <th>Property ID</th>
                <th>Name</th>
                <th>Service Fee</th>
            </tr>
        </thead>
        <tbody>
            {{#each invoices}}
                {{#highlightEmptyFee service_fee_clean}}
                <tr class="highlight">
                    <td>{{id}}</td>
                    <td>{{NAME}}</td>
                    <td>{{serviceFee service_fee_clean}}</td>
                </tr>
                {{else}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{NAME}}</td>
                    <td>{{serviceFee service_fee_clean}}</td>
                </tr>
                {{/highlightEmptyFee}}
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <p>No invoices found.</p>
    {{/if}}
</body>
</html>
